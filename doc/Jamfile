import asciidoctor ;
import asciidoctor-diagram ;

html flags.html : index.adoc ;

install html_ : flags.html : <location>html ;

pdf flags.pdf : index.adoc ;
explicit flags.pdf ;

install pdf_ : 
  flags.pdf :
  <location>pdf ;

explicit pdf_ ;

###############################################################################
alias boostdoc ;
explicit boostdoc ;
alias boostrelease : html_ ;
explicit boostrelease ;
